<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send signal"
        android:id="@+id/signalButton"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/pairButton"
        android:layout_alignEnd="@+id/pairButton" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bluetooth"
        android:id="@+id/bluetoothSwitch"
        android:checked="false"
        android:switchPadding="14.5sp"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/scanButton"
        android:layout_alignEnd="@+id/scanButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan for Devices"
        android:id="@+id/scanButton"
        android:layout_below="@+id/bluetoothSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="79dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Paired Devices"
        android:id="@+id/pairButton"
        android:layout_below="@+id/scanButton"
        android:layout_alignEnd="@+id/scanButton"
        android:layout_alignStart="@+id/scanButton" />

</RelativeLayout>
